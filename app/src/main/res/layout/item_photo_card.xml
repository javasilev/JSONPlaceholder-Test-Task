<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/item_photo_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginBottom="@dimen/tiny"
    android:layout_marginLeft="@dimen/minor"
    android:layout_marginRight="@dimen/minor"
    android:layout_marginTop="@dimen/tiny"
    android:orientation="vertical"
    app:cardCornerRadius="2dp">
    
    <ImageView
        android:id="@+id/item_photo_card_image_view_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:src="@android:drawable/btn_star_big_on"
        tools:ignore="ContentDescription" />
    
    <TextView
        android:id="@+id/item_photo_card_text_view_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="@dimen/rich"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        tools:text="Images" />
    
    <TextView
        android:id="@+id/item_photo_card_text_view_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:gravity="center"
        android:padding="@dimen/modest"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        tools:text="vgfhbvjddf ghdbh gdbhj bghbdfh gbhdfjhbgjh bghfhfhj" />

</android.support.v7.widget.CardView>